{
  "Server": {
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "Session": {
      "SessionTokenLifetimeMs": 2592000000
    },
    "Database": {
      "ConnectionString": "Data Source=uchat.db"
    },
    "AllowedHosts": "*"
  },
  "Client": {
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "System": "Warning"
      },
      "FilePath": "logs/uchat-{Date}.log"
    },
    "SignalR": {
      "TimeoutSeconds": 30,
      "RetryDelays": [2, 2, 5, 10, 15, 30]
    },
    "Session": {
      "Directory": "~/.uchat"
    }
  }
}
