        <StreamGeometry x:Key="PlusIcon">
            M20 14H14V20H10V14H4V10H10V4H14V10H20V14Z
        </StreamGeometry>

        <StreamGeometry x:Key="EditIcon">
            M5,3C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0
            21,19V12H19V19H5V5H12V3H5M17.78,4C17.61,4 17.43,4.07
