        <StreamGeometry x:Key="ArrowIcon">
            M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z
        </StreamGeometry>

        <StreamGeometry x:Key="TrashIcon">
            M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z
        </StreamGeometry>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToWidthConverter}}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Main content (sidebars and chat) -->
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToWidthConverter}}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

        <!-- ========== LEFT SIDEBAR (EXPANDED) ========== -->
        <Border Grid.Column="0"
                Background="#98B7E4"
                CornerRadius="0,12,12,0"
                IsVisible="{Binding !IsSidebarCollapsed}">
            <Grid Margin="8"
                  RowDefinitions="Auto,Auto,*,Auto">

                <!-- BIO BLOCK -->
                <Border Grid.Row="0"
                        Background="#364D70"
                        CornerRadius="8"
                        Padding="8"
                        Margin="0,0,0,16">
                    <Grid ColumnDefinitions="Auto,*,Auto"
                          VerticalAlignment="Center">

                        <!-- Profile Picture Button -->
                        <Button Grid.Column="0"
                                Width="48"
                                Height="48"
                                CornerRadius="24"
                                Padding="0"
                                Click="ProfilePictureButton_Click">

                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </Button.Styles>

                            <Path Fill="White"
                                  Stretch="Uniform"
                                  Width="48"
                                  Height="48"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource ChangeProfilePictureIcon}"/>
                        </Button>

                        <!-- Bio Text (View Mode) -->
                        <StackPanel Grid.Column="1"
                                    Margin="8,0,8,0"
                                    IsVisible="{Binding !IsEditingProfile}">
                            <TextBlock Text="{Binding Username}"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       MaxWidth="140"
                                       Foreground="White" />
                            <TextBlock Text="{Binding Bio}"
                                       FontSize="11"
                                       Opacity="0.8"
                                       TextWrapping="Wrap"
                                       MaxWidth="140"
                                       Foreground="White"
                                       IsVisible="{Binding Bio, Converter={StaticResource StringNotEmptyConverter}}" />
                        </StackPanel>

                        <!-- Bio Text (Edit Mode) -->
                        <StackPanel Grid.Column="1"
                                    Margin="8,0,8,0"
                                    Spacing="4"
                                    IsVisible="{Binding IsEditingProfile}">
                            <TextBox Text="{Binding Username}"
                                     FontWeight="Bold"
                                     FontSize="12"
                                     MaxLength="16"
                                     Watermark="Username (16 max)"
                                     Background="#4A6491"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Padding="4,2"
                                     CornerRadius="4"
                                     MaxWidth="140">
                                <TextBox.Styles>
                                    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="#4A6491"/>
                                        <Setter Property="BorderBrush" Value="#98B7E4"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                    </Style>
                                    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="#4A6491"/>
                                    </Style>
                                </TextBox.Styles>
                            </TextBox>

                            <TextBox Text="{Binding Bio}"
                                     FontSize="11"
                                     MaxLength="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Watermark="Bio (80 max)"
                                     Background="#4A6491"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Padding="4,2"
                                     CornerRadius="4"
                                     MinHeight="40"
                                     MaxWidth="140">
                                <TextBox.Styles>
                                    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="#4A6491"/>
                                        <Setter Property="BorderBrush" Value="#98B7E4"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                    </Style>
                                    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="#4A6491"/>
                                    </Style>
                                </TextBox.Styles>
                            </TextBox>
                        </StackPanel>

                        <!-- Edit Bio Button -->
                        <Button Grid.Column="2"
                                Width="24"
                                Height="24"
                                CornerRadius="24"
                                Background="Transparent"
                                Command="{Binding ToggleEditProfileCommand}"
                                Margin="0,0,4,8">

                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </Button.Styles>

                            <Path Fill="White"
                                  Stretch="Uniform"
                                  Width="20"
                                  Height="20"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource EditIcon}"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- SEARCH -->
                <Grid Grid.Row="1"
                      ColumnDefinitions="*,Auto"
                      Margin="0,0,0,16">

                    <Border Grid.Column="0"
                            CornerRadius="20"
                            Background="#ffffff"
                            Height="40"
                            Margin="0,0,8,0">

                        <Grid ColumnDefinitions="Auto, *">

                            <Button Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="Transparent"
                                    Margin="4,0,0,0"
                                    Padding="0"
                                    VerticalAlignment="Center"
                                    Command="{Binding SearchCommand}">

                                <Button.Styles>
                                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </Button.Styles>

                                <Path Fill="#364D70"
                                      Stretch="Uniform"
                                      Width="24"
                                      Height="24"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Data="{StaticResource SearchIcon}"/>
                            </Button>

                            <TextBox Grid.Column="1"
                                     Name="SearchTextBox"
                                     Text="{Binding SearchText}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#364D70"
                                     CaretBrush="#364D70"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Padding="4, 0,12,0"
                                     Watermark="Search"
                                     KeyDown="SearchTextBox_KeyDown">
                                <TextBox.Styles>
                                    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Style>
                                    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Style>
                                    <Style Selector="TextBox:pointerover /template/ TextBlock#PART_Watermark">
                                        <Setter Property="Foreground" Value="#80364D70"/>
                                    </Style>
                                    <Style Selector="TextBox:focus /template/ TextBlock#PART_Watermark">
                                        <Setter Property="Foreground" Value="#80364D70"/>
                                    </Style>
                                </TextBox.Styles>
                            </TextBox>
                        </Grid>
                    </Border>

                    <Button Grid.Column="1"
                            Width="40"
                            Height="40"
                            CornerRadius="20"
                            Background="Transparent"
                            Padding="0"
                            Command="{Binding OpenAddContactCommand}">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>

                        <Path Fill="White"
                              Stretch="Uniform"
                              Width="24"
                              Height="24"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource PlusIcon}"/>
                    </Button>
                </Grid>

                <!-- CONTACTS LIST -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Styles>
                        <Style Selector="ScrollBar /template/ RepeatButton">
                            <Setter Property="IsVisible" Value="False" />
                        </Style>
                        <Style Selector="ScrollBar">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Width" Value="10" />
                            <Setter Property="MinWidth" Value="10" />
                        </Style>
                        <Style Selector="ScrollBar /template/ Thumb">
                            <Setter Property="Background" Value="#99FFFFFF" />
                            <Setter Property="CornerRadius" Value="10" />
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                        <Style Selector="ScrollBar /template/ Thumb:pointerover">
                            <Setter Property="Background" Value="#B2FFFFFF" />
                        </Style>
                        <Style Selector="ScrollBar /template/ Thumb:pressed">
                            <Setter Property="Background" Value="#CCFFFFFF" />
                            <Setter Property="CornerRadius" Value="10" />
                        </Style>
                    </ScrollViewer.Styles>
                    <StackPanel Spacing="8">
                        <StackPanel.Styles>
                            <Style Selector="Button">
                                <Setter Property="Width" Value="240" />
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                <Setter Property="Padding" Value="15,0" />
                            </Style>
                        </StackPanel.Styles>
                        <Button Height="48" CornerRadius="24" Content="Contact 1" />
                        <Button Height="48" CornerRadius="24" Content="Contact 2" />
                        <Button Height="48" CornerRadius="24" Content="Contact 3" />
                        <Button Height="48" CornerRadius="24" Content="Contact 4" />
                        <Button Height="48" CornerRadius="24" Content="Contact 5" />
                        <Button Height="48" CornerRadius="24" Content="Contact 6" />
                        <Button Height="48" CornerRadius="24" Content="Contact 7" Opacity="0.9" />
                        <Button Height="48" CornerRadius="24" Content="Contact 8" Opacity="0.8" />
                        <Button Height="48" CornerRadius="24" Content="Contact 9" Opacity="0.7" />
                    </StackPanel>
                </ScrollViewer>

                <!-- BOTTOM BUTTONS -->
                <Grid Grid.Row="3"
                      ColumnDefinitions="Auto,*,Auto"
                      Margin="0,16,0,0">
                    <Button Grid.Column="0"
                            Width="48"
                            Height="48"
                            CornerRadius="24"
                            Background="Transparent"
                            Command="{Binding ToggleSidebarCommand}"
                            Margin="0,16,0,0">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>

                        <Path Fill="White"
                              Stretch="Uniform"
                              Width="32"
                              Height="32"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource CloseSidebarIcon}"/>
                    </Button>

                    <Border Grid.Column="1" />

                    <Button Grid.Column="2"
                            Width="48"
                            Height="48"
                            CornerRadius="24"
                            Background="Transparent"
                            Margin="0,16,0,0">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>

                        <Path Fill="White"
                              Stretch="Uniform"
                              Width="32"
                              Height="32"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource SettingsIcon}"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- ========== LEFT SIDEBAR (COLLAPSED/THIN) ========== -->
        <Border Grid.Column="0"
                Background="#98B7E4"
                CornerRadius="0,12,12,0"
                IsVisible="{Binding IsSidebarCollapsed}">
            <Grid Margin="8"
                  RowDefinitions="Auto,Auto,*,Auto">

                <!-- Profile Picture Only -->
                <Button Grid.Row="0"
                        Width="48"
                        Height="48"
                        CornerRadius="24"
                        Padding="0"
                        Margin="0,0,0,16"
                        HorizontalAlignment="Center"
                        Click="ProfilePictureButton_Click">

                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </Button.Styles>

                    <Path Fill="White"
                          Stretch="Uniform"
                          Width="48"
                          Height="48"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Data="{StaticResource ChangeProfilePictureIcon}"/>
                </Button>

                <!-- Search Icon Only -->
                <Button Grid.Row="1"
                        Width="40"
                        Height="40"
                        CornerRadius="20"
                        Background="White"
                        Padding="0"
                        Margin="0,0,0,16"
                        HorizontalAlignment="Center"
                        Command="{Binding SearchCommand}">

                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="White"/>
                        </Style>
                    </Button.Styles>

                    <Path Fill="#364D70"
                          Stretch="Uniform"
                          Width="24"
                          Height="24"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Data="{StaticResource SearchIcon}"/>
                </Button>

                <!-- Contact Icons Only -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalAlignment="Center">
                    <ScrollViewer.Styles>
                        <Style Selector="ScrollBar /template/ RepeatButton">
                            <Setter Property="IsVisible" Value="False" />
                        </Style>
                        <Style Selector="ScrollBar">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Width" Value="10" />
                            <Setter Property="MinWidth" Value="10" />
                        </Style>
                        <Style Selector="ScrollBar /template/ Thumb">
                            <Setter Property="Background" Value="#99FFFFFF" />
                            <Setter Property="CornerRadius" Value="10" />
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                        <Style Selector="ScrollBar /template/ Thumb:pointerover">
                            <Setter Property="Background" Value="#B2FFFFFF" />
                        </Style>
                        <Style Selector="ScrollBar /template/ Thumb:pressed">
                            <Setter Property="Background" Value="#CCFFFFFF" />
                            <Setter Property="CornerRadius" Value="10" />
                        </Style>
                    </ScrollViewer.Styles>
                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                        <Button Width="48"
                                Height="48"
                                CornerRadius="24"
                                Padding="0"
                                Background="White">
                            <Path Fill="#364D70"
                                  Stretch="Uniform"
                                  Width="32"
                                  Height="32"
                                  Data="{StaticResource ChangeProfilePictureIcon}"/>
                        </Button>
                        <Button Width="48"
                                Height="48"
                                CornerRadius="24"
                                Padding="0"
                                Background="White">
                            <Path Fill="#364D70"
                                  Stretch="Uniform"
                                  Width="32"
                                  Height="32"
                                  Data="{StaticResource ChangeProfilePictureIcon}"/>
                        </Button>
                        <Button Width="48"
                                Height="48"
                                CornerRadius="24"
                                Padding="0"
                                Background="White">
                            <Path Fill="#364D70"
                                  Stretch="Uniform"
                                  Width="32"
                                  Height="32"
                                  Data="{StaticResource ChangeProfilePictureIcon}"/>
                        </Button>
                        <Button Width="48"
                                Height="48"
                                CornerRadius="24"
                                Padding="0"
                                Background="White">
                            <Path Fill="#364D70"
                                  Stretch="Uniform"
                                  Width="32"
                                  Height="32"
                                  Data="{StaticResource ChangeProfilePictureIcon}"/>
                        </Button>
                        <Button Width="48"
                                Height="48"
                                CornerRadius="24"
                                Padding="0"
                                Background="White">
                            <Path Fill="#364D70"
                                  Stretch="Uniform"
                                  Width="32"
                                  Height="32"
                                  Data="{StaticResource ChangeProfilePictureIcon}"/>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom Buttons (Collapsed) -->
                <Grid Grid.Row="3"
                      RowDefinitions="Auto,Auto"
                      Margin="0,16,0,0"
                      HorizontalAlignment="Center">
                    <Button Grid.Row="0"
                            Width="48"
                            Height="48"
                            CornerRadius="24"
                            Background="Transparent"
                            Command="{Binding ToggleSidebarCommand}"
                            Margin="0,0,0,8">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>

                        <Path Fill="White"
                              Stretch="Uniform"
                              Width="32"
                              Height="32"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource OpenSidebarIcon}"/>
                    </Button>

                    <Button Grid.Row="1"
                            Width="48"
                            Height="48"
                            CornerRadius="24"
                            Background="Transparent">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>

                        <Path Fill="White"
                              Stretch="Uniform"
                              Width="32"
                              Height="32"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource SettingsIcon}"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- ========== RIGHT SIDE (CHAT AREA) ========== -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto" Margin="16">

            <!-- HEADER -->
            <Border Grid.Row="0"
                    Background="#4A6491"
                    CornerRadius="12"
                    Padding="16,12"
                    Margin="0,0,0,16">
                <TextBlock Text="{Binding Header}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- MESSAGES AREA -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,16">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,12"
                                        PointerPressed="Message_PointerPressed"
                                        HorizontalAlignment="{Binding IsOutgoing, Converter={StaticResource BoolToAlignmentConverter}}">

                                <!-- Message Bubble with Edit/Delete Popup -->
                                <Grid ColumnDefinitions="Auto,Auto">

                                    <!-- Edit/Delete Popup (Left side for outgoing, right side for incoming) -->
                                    <Border Grid.Column="{Binding IsOutgoing, Converter={StaticResource BoolToPopupColumnConverter}}"
                                            Background="#2C3E5A"
                                            CornerRadius="8"
                                            Padding="8"
                                            IsVisible="{Binding IsEditing}"
                                            Margin="{Binding IsOutgoing, Converter={StaticResource BoolToPopupMarginConverter}}"
                                            VerticalAlignment="Center">
                                        <StackPanel Spacing="4">
                                            <Button Content="Edit"
                                                    Background="#4A6491"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    CornerRadius="4"
                                                    Padding="12,6"
                                                    HorizontalContentAlignment="Center"
                                                    Command="{Binding $parent[ItemsControl].((viewModels:ChatViewModel)DataContext).EditMessageCommand}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="Delete"
                                                    Background="#C44569"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    CornerRadius="4"
                                                    Padding="12,6"
                                                    HorizontalContentAlignment="Center"
                                                    Command="{Binding $parent[ItemsControl].((viewModels:ChatViewModel)DataContext).DeleteMessageCommand}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Message Bubble -->
                                    <Border Grid.Column="{Binding IsOutgoing, Converter={StaticResource BoolToMessageColumnConverter}}"
                                            Background="{Binding IsOutgoing, Converter={x:Static converters:BoolToColorConverter.Instance}}"
                                            CornerRadius="12"
                                            Padding="12,8"
                                            MaxWidth="400">
                                        <StackPanel Spacing="4">
                                            <TextBlock Text="{Binding Sender}"
                                                       FontSize="11"
                                                       FontWeight="Bold"
                                                       Foreground="#364D70"
                                                       IsVisible="{Binding !IsOutgoing}"/>
                                            <TextBlock Text="{Binding Text}"
                                                       TextWrapping="Wrap"
                                                       Foreground="{Binding IsOutgoing, Converter={x:Static converters:BoolToTextColorConverter.Instance}}"/>
                                            <TextBlock Text="{Binding Time}"
                                                       FontSize="10"
                                                       Opacity="0.7"
                                                       HorizontalAlignment="Right"
                                                       Foreground="{Binding IsOutgoing, Converter={x:Static converters:BoolToTextColorConverter.Instance}}"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- MESSAGE INPUT -->
            <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0"
                        Width="48"
                        Height="48"
                        CornerRadius="24"
                        Background="#4A6491"
                        Margin="0,0,8,0"
                        Click="FileUploadButton_Click">

                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#5A7AA1"/>
                        </Style>
                    </Button.Styles>

                    <Path Fill="White"
                          Stretch="Uniform"
                          Width="24"
                          Height="24"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Data="{StaticResource CloudIcon}"/>
                </Button>

                <Border Grid.Column="1"
                        Background="#4A6491"
                        CornerRadius="24"
                        Padding="16,12">
                    <TextBox Name="MessageTextBox"
                             Text="{Binding OutgoingMessage}"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             CaretBrush="White"
                             Watermark="Let if flow..."
                             KeyDown="MessageTextBox_KeyDown">
                        <TextBox.Styles>
                            <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>
                            <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>
                        </TextBox.Styles>
                    </TextBox>
                </Border>

                <Button Grid.Column="2"
                        Width="48"
                        Height="48"
                        CornerRadius="24"
                        Background="#4A6491"
                        Margin="8,0,0,0"
                        Command="{Binding SendCommand}">

                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#5A7AA1"/>
                        </Style>
                    </Button.Styles>

                    <Path Fill="White"
                          Stroke="White"
                          StrokeThickness="2"
                          Stretch="Uniform"
                          Width="24"
                          Height="24"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Data="{StaticResource SendIcon}"/>
                </Button>
            </Grid>
        </Grid>

        <!-- Add Contact/Group Overlay -->
        <ContentControl Grid.ColumnSpan="2"
                        Content="{Binding AddContactViewModel}"
                        IsVisible="{Binding IsAddContactOpen}"
                        ZIndex="1000"/>
    </Grid></Grid>
</UserControl>