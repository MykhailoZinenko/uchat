    <!-- Общий layout: слева сайдбар, справа чат -->
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Сайдбар -->
            <ColumnDefinition Width="280" />
            <!-- Основная зона чата -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ========== LEFT SIDEBAR ========== -->
        <Border Grid.Column="0"
                Background="#98B7E4"
                CornerRadius="0,12,12,0">
            <Grid Margin="8"
                  RowDefinitions="Auto,Auto,*,Auto">

                <!-- 1. BIO-БЛОК -->
                <Border Grid.Row="0"
                        Background="#364D70"
                        CornerRadius="8"
                        Padding="8"
                        Margin="0,0,0,16">
                    <Grid ColumnDefinitions="Auto,*,Auto"
                          VerticalAlignment="Center">

                        <!-- Кнопка смены иконки пользователя -->
                        <Button Grid.Column="0"
                                Width="48"
                                Height="48"
                                CornerRadius="24">
                            
                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </Button.Styles>
                            
                            <Path Fill="White"
                                  Stretch="Uniform"
                                  Width="48"
                                  Height="48"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource ChangeProfilePictureIcon}"/>
                        </Button>

                        <!-- Текст био (плейсхолдер) -->
                        <StackPanel Grid.Column="1"
                                    Margin="8,0,8,0">
                            <TextBlock Text="Username"
                                       FontFamily="{StaticResource InterFont}"
                                       FontWeight="Bold" />
                            <TextBlock Text="Bio goes here…"
                                       FontFamily="{StaticResource PoppinsFont}"
                                       FontSize="11"
                                       Opacity="0.8" />
                        </StackPanel>

                        <!-- Кнопка редактировать био -->
                        <Button Grid.Column="2"
                                Width="24"
                                Height="24"
                                CornerRadius="24"
                                Background="Transparent"
                                Margin="0,0,4,8">
                        
                            <Button.Styles>
                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </Button.Styles>
    
                            <Path Fill="White"
                                  Stretch="Uniform"
                                  Width="24"
                                  Height="24"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource EditIcon}"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- 2. ПОИСК + ПРАВАЯ КНОПКА (+ ПОТОМ) -->
                <Grid Grid.Row="1"
                      ColumnDefinitions="*,Auto"
                      Margin="0,0,0,16">
                    
                    <Border Grid.Column="0"
                            CornerRadius="20"
                            Background="#ffffff"
                            Height="40"
                            Margin="0,0,8,0"> 
        
                        <Grid ColumnDefinitions="Auto, *"> 
                            
                            <Button Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="Transparent"
                                    Margin="4,0,0,0"
                                    Padding="0"
                                    VerticalAlignment="Center">
                
                                <Button.Styles>
                                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </Button.Styles>

                                <Path Fill="#364D70"
                                      Stretch="Uniform"
                                      Width="24"
                                      Height="24"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Data="{StaticResource SearchIcon}"/>
                            </Button>
                            
                            <TextBox Grid.Column="1" 
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#364D70"
                                     CaretBrush="#364D70" 
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Padding="4, 0,12,0"
                                     Watermark="Search">

                            
                                <TextBox.Styles>
                                    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Style>
                                    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Style>

                                    <Style Selector="TextBox:pointerover /template/ TextBlock#PART_Watermark">
                                        <Setter Property="Foreground" Value="#80364D70"/> 
                                    </Style>
                                    <Style Selector="TextBox:focus /template/ TextBlock#PART_Watermark">
                                        <Setter Property="Foreground" Value="#80364D70"/> 
                                    </Style>
                                </TextBox.Styles>
                            </TextBox>
                        </Grid>
                    </Border>

                    <Button Grid.Column="1"
                            Width="40"
                            Height="40"
                            CornerRadius="20"
                            Background="Transparent"
                            Padding="0">
                    
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>

                        <Path Fill="White"
                              Stretch="Uniform"
                              Width="24"
                              Height="24"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource PlusIcon}"/>
                    </Button>
                </Grid>

                <!-- 3. СПИСОК ПОСЛЕДНИХ ЧАТОВ (пока заглушки) -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto">

                    <ScrollViewer.Resources>
                        <SolidColorBrush x:Key="ScrollBarTrackFill" Color="Transparent" />
                        <SolidColorBrush x:Key="ScrollBarTrackFillPointerOver" Color="Transparent" />
                        <SolidColorBrush x:Key="ScrollBarTrackFillPressed" Color="Transparent" />
                        <SolidColorBrush x:Key="ScrollBarTrackStroke" Color="Transparent" />
                        <SolidColorBrush x:Key="ScrollBarBackground" Color="Transparent" />
                        <SolidColorBrush x:Key="ScrollBarBackgroundPointerOver" Color="Transparent" />
                        <SolidColorBrush x:Key="ScrollBarBackgroundPressed" Color="Transparent" />
                    </ScrollViewer.Resources>

                    <ScrollViewer.Styles>
                        <Style Selector="ScrollBar /template/ RepeatButton">
                            <Setter Property="IsVisible" Value="False" />
                        </Style>

                        <Style Selector="ScrollBar">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Width" Value="10" />
                            <Setter Property="MinWidth" Value="10" /> 
                        </Style>

                        <Style Selector="ScrollBar /template/ Thumb">
                            <Setter Property="Background" Value="#99FFFFFF" />
                            <Setter Property="CornerRadius" Value="10" />
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>

                        <Style Selector="ScrollBar /template/ Thumb:pointerover">
                            <Setter Property="Background" Value="#B2FFFFFF" />
                        </Style>

                        <Style Selector="ScrollBar /template/ Thumb:pressed">
                            <Setter Property="Background" Value="#CCFFFFFF" />
                            <Setter Property="CornerRadius" Value="10" />
                        </Style>
                    </ScrollViewer.Styles>
                    <StackPanel Spacing="8">
                        <StackPanel.Styles>
                            <Style Selector="Button">
                                <Setter Property="Width" Value="240" /> 
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                <Setter Property="Padding" Value="15,0" />
                                <Setter Property="FontFamily" Value="{StaticResource InterFont}" />
                            </Style>
                        </StackPanel.Styles>
                        <Button Height="48"
                                CornerRadius="8"
                                Content="Contact 1" />
                        <Button Height="48"
                                CornerRadius="8"
                                Content="Contact 2" />
                        <Button Height="48"
                                CornerRadius="8"
                                Content="Contact 3" />
                        <Button Height="48"
                                CornerRadius="8"
                                Content="Contact 4" />
                        <Button Height="48"
                                CornerRadius="8"
                                Content="Contact 5" />
                        <Button Height="48"
                                CornerRadius="8"
                                Content="Contact 6" />
                        <Button Height="48"
                                CornerRadius="8"
                                Content="Contact 7"
                                Opacity="0.9" />
                        <Button Height="48"
                                CornerRadius="8"
                                Content="Contact 8"
                                Opacity="0.8" />
                        <Button Height="48"
                                CornerRadius="8"
                                Content="Contact 9"
                                Opacity="0.7" />
                    </StackPanel>
                </ScrollViewer>    

                <!-- 4. ДВЕ КНОПКИ ВНИЗУ (НАЗАД / НАСТРОЙКИ, как на макете) -->
                <Grid Grid.Row="3"
                      ColumnDefinitions="Auto,*,Auto"
                      Margin="0,16,0,0">
                    <!-- Левая кнопка (выход / назад) 48x48 -->
                    <Button Grid.Column="0"
                            Width="48"
                            Height="48"
                            CornerRadius="24"
                            Background="Transparent"
                            Margin="0,16,0,0">
                        
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>
    
                        <Path Fill="White"
                              Stretch="Uniform"
                              Width="32"
                              Height="32"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource CloseSidebarIcon}"/>
                    </Button>

                    <!-- Пустой спейсер -->
                    <Border Grid.Column="1" />

                    <!-- Правая кнопка (настройки) 48x48 -->
                    <Button Grid.Column="2"
                            Width="48"
                            Height="48"
                            CornerRadius="24"
                            Background="Transparent"
                            Margin="0,16,0,0">
                        
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>
    
                        <Path Fill="White"
                              Stretch="Uniform"
                              Width="32"
                              Height="32"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource SettingsIcon}"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- ========== RIGHT: CHAT AREA ========== -->
        <Grid Grid.Column="1"
              Margin="8"
              RowDefinitions="*,Auto">

            <!-- Зона сообщений -->
            <ScrollViewer Grid.Row="0">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="8"
                                        HorizontalAlignment="Left">
                                <Border Background="#B6DBFF"
                                        Padding="12"
                                        CornerRadius="12"
                                        MaxWidth="320">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Sender}"
                                                   FontFamily="{StaticResource InterFont}"
                                                   FontWeight="Bold"
                                                   FontSize="11"
                                                   Foreground="#364D70" />

                                        <TextBlock Text="{Binding Text}"
                                                   FontFamily="{StaticResource PoppinsFont}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,4"
                                                   Foreground="#364D70" />

                                        <TextBlock Text="{Binding Time}"
                                                   FontSize="10"
                                                   Opacity="0.7"
                                                   HorizontalAlignment="Right"
                                                   Foreground="#364D70" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Поле ввода сообщения + send-кнопка -->
            <Border Grid.Row="1"
                    Margin="8,8,8,0"
                    CornerRadius="25"
                    Background="#ffffff"
                    Height="50">

                <Grid ColumnDefinitions="Auto,*,Auto">

                    <Button Grid.Column="0"
                            Width="40"
                            Height="40"
                            CornerRadius="20"
                            Background="Transparent"
                            Margin="6,0,0,8"
                            Padding="0">
                        
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>
    
                        <Path Fill="#364D70"
                              Stretch="Uniform"
                              Width="36"
                              Height="36"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RenderTransform="scale(1,-1)"
                              Data="{StaticResource CloudIcon}"/>
                    </Button>

                    <TextBox Grid.Column="1"
                             Text="{Binding OutgoingMessage}"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="Black"
                             CaretBrush="#364D70"
                             FontSize="14"
                             Watermark="Message..."
                             VerticalContentAlignment="Center"
                             Padding="12,0">

                        <TextBox.Styles>
                            <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>

                            <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>

                            <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Style>

                            <Style Selector="TextBox:pointerover /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Style>
            
                            <Style Selector="TextBox:focus /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                            </Style>
                        </TextBox.Styles>
                    </TextBox>

                    <Button Grid.Column="2"
                            Width="40"
                            Height="40"
                            CornerRadius="20"
                            Background="Transparent"
                            Command="{Binding SendCommand}"
                            Margin="0,0,5,0"
                            Padding="0">
            
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>

                        <Path Data="{StaticResource SendIcon}"
                              Stroke="#364D70" 
                              StrokeThickness="2" 
                              Fill="Transparent"
                              Width="22"
                              Height="22"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,2,2,0"/> 
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>