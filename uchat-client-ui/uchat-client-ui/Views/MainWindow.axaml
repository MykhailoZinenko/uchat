<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:uchat_client.Views"
        xmlns:viewModels="clr-namespace:uchat_client.ViewModels"
        x:Class="uchat_client.MainWindow"
        x:DataType="viewModels:MainWindowViewModel"
        Width="400" Height="600"
        Title="uchat">

    <Window.DataTemplates>
        <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:RegistrationViewModel}">
            <views:RegistrationView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:ChatViewModel}">
            <views:ChatView />
        </DataTemplate>
    </Window.DataTemplates>
    
    <ContentControl Content="{Binding CurrentView}" />
</Window>