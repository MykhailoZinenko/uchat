    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- REUSABLE SIDEBAR -->
        <views:SidebarView Grid.Column="0"
                           DataContext="{Binding SidebarViewModel}" />

        <!-- CHAT AREA -->
        <Grid Grid.Column="1"
              Margin="8"
              RowDefinitions="Auto,*,Auto">

            <!-- CONTACT HEADER BUTTON -->
            <Button Grid.Row="0"
                    Height="80"
                    Margin="8,8,8,16"
                    Background="#4A6280"
                    CornerRadius="20"
                    HorizontalAlignment="Left"
                    Padding="15,0,30,0"
                    Command="{Binding OpenContactCommand}">

                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#5A7290"/>
                    </Style>
                    <Style Selector="Button:pressed /template/ ContentPresenter">
                        <Setter Property="Background" Value="#3A5270"/>
                    </Style>
                </Button.Styles>

                <Grid ColumnDefinitions="Auto,Auto">

                    <!-- Avatar Circle -->
                    <Border Grid.Column="0"
                            Width="50"
                            Height="50"
                            CornerRadius="25"
                            Background="White"
                            Margin="0,0,15,0">
                        <Path Fill="#4A6280"
                              Stretch="Uniform"
                              Width="30"
                              Height="30"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource UserIcon}"/>
                    </Border>

                    <!-- Contact Name -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding ContactName}"
                               FontFamily="{StaticResource InterFont}"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>

            <!-- Messages Area -->
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="8"
                                        HorizontalAlignment="Left">
                                <Border Background="#B6DBFF"
                                        Padding="12"
                                        CornerRadius="12"
                                        MaxWidth="320">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Sender}"
                                                   FontFamily="{StaticResource InterFont}"
                                                   FontWeight="Bold"
                                                   FontSize="11"
                                                   Foreground="#364D70" />

                                        <TextBlock Text="{Binding Text}"
                                                   FontFamily="{StaticResource PoppinsFont}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,4"
                                                   Foreground="#364D70" />

                                        <TextBlock Text="{Binding Time}"
                                                   FontSize="10"
                                                   Opacity="0.7"
                                                   HorizontalAlignment="Right"
                                                   Foreground="#364D70" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Input Area -->
            <Border Grid.Row="2"
                    Margin="8,8,8,0"
                    CornerRadius="25"
                    Background="#ffffff"
                    Height="50">

                <Grid ColumnDefinitions="Auto,*,Auto">

                    <Button Grid.Column="0"
                            Width="40"
                            Height="40"
                            CornerRadius="20"
                            Background="Transparent"
                            Margin="6,0,0,8"
                            Padding="0">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>

                        <Path Fill="#364D70"
                              Stretch="Uniform"
                              Width="36"
                              Height="36"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RenderTransform="scale(1,-1)"
                              Data="{StaticResource CloudIcon}"/>
                    </Button>

                    <TextBox Grid.Column="1"
                             Text="{Binding OutgoingMessage}"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="Black"
                             CaretBrush="#364D70"
                             FontSize="14"
                             Watermark="Message..."
                             VerticalContentAlignment="Center"
                             Padding="12,0">

                        <TextBox.Styles>
                            <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>

                            <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>

                            <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Style>

                            <Style Selector="TextBox:pointerover /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Style>

                            <Style Selector="TextBox:focus /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                            </Style>
                        </TextBox.Styles>
                    </TextBox>

                    <Button Grid.Column="2"
                            Width="40"
                            Height="40"
                            CornerRadius="20"
                            Background="Transparent"
                            Command="{Binding SendCommand}"
                            Margin="0,0,5,0"
                            Padding="0">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>

                        <Path Data="{StaticResource SendIcon}"
                              Stroke="#364D70"
                              StrokeThickness="2"
                              Fill="Transparent"
                              Width="22"
                              Height="22"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,2,2,0"/>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <!-- CONTACT OVERLAY -->
        <Grid Grid.Column="0"
              Grid.ColumnSpan="2"
              Background="#80000000"
              IsVisible="{Binding ShowContactOverlay}"
              PointerPressed="OverlayBackground_PointerPressed">

            <!-- Contact popup card -->
            <Border MaxWidth="800"
                    MaxHeight="600"
                    MinWidth="500"
                    Background="#98B7E4"
                    CornerRadius="20"
                    Padding="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    PointerPressed="ContactCard_PointerPressed">

                <StackPanel Spacing="25">

                    <!-- Title -->
                    <TextBlock Text="Contact"
                               FontFamily="{StaticResource InterFont}"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#364D70"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20" />

                    <!-- Add to contact button -->
                    <Button Height="70"
                            CornerRadius="16"
                            Background="#4A6280"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="30,0"
                            Command="{Binding AddToContactCommand}">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#5A7290"/>
                            </Style>
                            <Style Selector="Button:pressed /template/ ContentPresenter">
                                <Setter Property="Background" Value="#3A5270"/>
                            </Style>
                        </Button.Styles>

                        <Grid ColumnDefinitions="Auto,*">
                            <Path Grid.Column="0"
                                  Fill="White"
                                  Stretch="Uniform"
                                  Width="28"
                                  Height="28"
                                  Margin="0,0,20,0"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource AddContactIcon}"/>

                            <TextBlock Grid.Column="1"
                                       Text="Add to contact"
                                       FontFamily="{StaticResource InterFont}"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Add to friend list button -->
                    <Button Height="70"
                            CornerRadius="12"
                            Background="#4A6280"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="20,0"
                            Command="{Binding AddToFriendListCommand}">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#5A7290"/>
                            </Style>
                            <Style Selector="Button:pressed /template/ ContentPresenter">
                                <Setter Property="Background" Value="#3A5270"/>
                            </Style>
                        </Button.Styles>

                        <Grid ColumnDefinitions="Auto,*">
                            <Path Grid.Column="0"
                                  Fill="White"
                                  Stretch="Uniform"
                                  Width="24"
                                  Height="24"
                                  Margin="0,0,15,0"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource HeartIcon}"/>

                            <TextBlock Grid.Column="1"
                                       Text="Add to friend list"
                                       FontFamily="{StaticResource InterFont}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Block user button -->
                    <Button Height="70"
                            CornerRadius="12"
                            Background="#4A6280"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="20,0"
                            Command="{Binding BlockUserCommand}">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#5A7290"/>
                            </Style>
                            <Style Selector="Button:pressed /template/ ContentPresenter">
                                <Setter Property="Background" Value="#3A5270"/>
                            </Style>
                        </Button.Styles>

                        <Grid ColumnDefinitions="Auto,*">
                            <Path Grid.Column="0"
                                  Fill="#FF5555"
                                  Stretch="Uniform"
                                  Width="24"
                                  Height="24"
                                  Margin="0,0,15,0"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource BlockIcon}"/>

                            <TextBlock Grid.Column="1"
                                       Text="Block user"
                                       FontFamily="{StaticResource InterFont}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                    <!-- Unblock user button -->
                    <Button Height="70"
                            CornerRadius="12"
                            Background="#4A6280"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="20,0"
                            Command="{Binding UnblockUserCommand}">

                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#5A7290"/>
                            </Style>
                            <Style Selector="Button:pressed /template/ ContentPresenter">
                                <Setter Property="Background" Value="#3A5270"/>
                            </Style>
                        </Button.Styles>

                        <Grid ColumnDefinitions="Auto,*">
                            <Path Grid.Column="0"
                                  Fill="White"
                                  Stretch="Uniform"
                                  Width="24"
                                  Height="24"
                                  Margin="0,0,15,0"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource LockIcon}"/>

                            <TextBlock Grid.Column="1"
                                       Text="Unblock user"
                                       FontFamily="{StaticResource InterFont}"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>
        <ContentControl Grid.ColumnSpan="2"
                        Content="{Binding SidebarViewModel.AddContactViewModel}"
                        IsVisible="{Binding SidebarViewModel.IsAddContactOpen}"
                        ZIndex="1000"/>
    </Grid>
</UserControl>