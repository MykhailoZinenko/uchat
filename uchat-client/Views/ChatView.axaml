            -25 2 -32 -13 -37 -71 -23 -203 -159 -253 -261 -79 -161 -81 -367 -6 -530 53
            -114 166 -229 283 -289 113 -56 135 -59 571 -64 l402 -4 0 251 0 251 -120 0
            c-66 0 -120 3 -120 8 1 8 395 581 413 599 9 9 49 -42 167 -215 85 -124 178
            -260 207 -301 29 -42 52 -79 53 -83 0 -5 -54 -8 -120 -8 l-120 0 0 -251 0
            -250 368 3 c408 4 421 6 560 76 184 92 316 255 366 453 22 91 21 246 -3 341
            -68 264 -292 468 -562 512 -34 6 -35 8 -47 66 -73 352 -478 521 -777 324 -28
            -18 -59 -41 -70 -52 -20 -19 -21 -18 -83 49 -71 76 -163 139 -261 176 -55 22
            -86 27 -186 29 -81 2 -138 -1 -177 -11z m-37 -164 c47 -59 2 -206 -93 -307
            -165 -176 -310 -84 -209 131 48 104 137 188 216 205 41 9 62 2 86 -29z
        </StreamGeometry>

        <StreamGeometry x:Key="SendIcon">
            M22 2L11 13 M22 2L15 22L11 13L2 9L22 2Z
        </StreamGeometry>

        <StreamGeometry x:Key="EditIcon">
            M5,3C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0
            21,19V12H19V19H5V5H12V3H5M17.78,4C17.61,4 17.43,4.07
            17.3,4.2L16.08,5.41L18.58,7.91L19.8,6.7C20.06,6.44
            20.06,6 19.8,5.75L18.25,4.2C18.12,4.07 17.95,4
            17.78,4M15.37,6.12L8,13.5V16H10.5L17.87,8.62L15.37,6.12Z
        </StreamGeometry>

        <StreamGeometry x:Key="ArrowIcon">
            M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z
        </StreamGeometry>

        <StreamGeometry x:Key="TrashIcon">
            M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z
        </StreamGeometry>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- REUSABLE SIDEBAR -->
        <views:SidebarView Grid.Column="0"
                           DataContext="{Binding SidebarViewModel}" />

        <!-- ========== RIGHT SIDE (CHAT AREA) ========== -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto" Margin="16">

            <!-- HEADER -->
            <Border Grid.Row="0"
                    Background="#4A6491"
                    CornerRadius="12"
                    Padding="16,12"
                    Margin="0,0,0,16">
                <TextBlock Text="{Binding Header}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- MESSAGES AREA -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,16">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,12"
                                        PointerPressed="Message_PointerPressed"
                                        HorizontalAlignment="{Binding IsOutgoing, Converter={StaticResource BoolToAlignmentConverter}}">

                                <!-- Message Bubble with Edit/Delete Popup -->
                                <Grid ColumnDefinitions="Auto,Auto">

                                    <!-- Edit/Delete Popup (Left side for outgoing, right side for incoming) -->
                                    <Border Grid.Column="{Binding IsOutgoing, Converter={StaticResource BoolToPopupColumnConverter}}"
                                            Background="#2C3E5A"
                                            CornerRadius="8"
                                            Padding="8"
                                            IsVisible="{Binding IsEditing}"
                                            Margin="{Binding IsOutgoing, Converter={StaticResource BoolToPopupMarginConverter}}"
                                            VerticalAlignment="Center">
                                        <StackPanel Spacing="4">
                                            <Button Content="Edit"
                                                    Background="#4A6491"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    CornerRadius="4"
                                                    Padding="12,6"
                                                    HorizontalContentAlignment="Center"
                                                    Command="{Binding $parent[ItemsControl].((viewModels:ChatViewModel)DataContext).EditMessageCommand}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="Delete"
                                                    Background="#C44569"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    CornerRadius="4"
                                                    Padding="12,6"
                                                    HorizontalContentAlignment="Center"
                                                    Command="{Binding $parent[ItemsControl].((viewModels:ChatViewModel)DataContext).DeleteMessageCommand}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Message Bubble -->
                                    <Border Grid.Column="{Binding IsOutgoing, Converter={StaticResource BoolToMessageColumnConverter}}"
                                            Background="{Binding IsOutgoing, Converter={x:Static converters:BoolToColorConverter.Instance}}"
                                            CornerRadius="12"
                                            Padding="12,8"
                                            MaxWidth="400">
                                        <StackPanel Spacing="4">
                                            <TextBlock Text="{Binding Sender}"
                                                       FontSize="11"
                                                       FontWeight="Bold"
                                                       Foreground="#364D70"
                                                       IsVisible="{Binding !IsOutgoing}"/>
                                            <TextBlock Text="{Binding Text}"
                                                       TextWrapping="Wrap"
                                                       Foreground="{Binding IsOutgoing, Converter={x:Static converters:BoolToTextColorConverter.Instance}}"/>
                                            <TextBlock Text="{Binding Time}"
                                                       FontSize="10"
                                                       Opacity="0.7"
                                                       HorizontalAlignment="Right"
                                                       Foreground="{Binding IsOutgoing, Converter={x:Static converters:BoolToTextColorConverter.Instance}}"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- MESSAGE INPUT -->
            <Border Grid.Row="2"
                    Margin="8,8,8,0"
                    CornerRadius="25"
                    Background="#ffffff"
                    Height="50">

                <Grid ColumnDefinitions="Auto,*,Auto">

                    <Button Grid.Column="0"
                            Width="40"
                            Height="40"
                            CornerRadius="20"
                            Background="Transparent"
                            Margin="6,0,0,8"
                            Padding="0"
                            Click="FileUploadButton_Click">
                        
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>
    
                        <Path Fill="#364D70"
                              Stretch="Uniform"
                              Width="36"
                              Height="36"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RenderTransform="scale(1,-1)"
                              Data="{StaticResource CloudIcon}"/>
                    </Button>

                    <TextBox Grid.Column="1"
                             Name="MessageTextBox"
                             Text="{Binding OutgoingMessage}"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="Black"
                             CaretBrush="#364D70"
                             FontSize="14"
                             Watermark="Message..."
                             VerticalContentAlignment="Center"
                             Padding="12,0"
                             KeyDown="MessageTextBox_KeyDown">

                        <TextBox.Styles>
                            <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>

                            <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>

                            <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Style>

                            <Style Selector="TextBox:pointerover /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Style>
            
                            <Style Selector="TextBox:focus /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                            </Style>
                        </TextBox.Styles>
                    </TextBox>

                    <Button Grid.Column="2"
                            Width="40"
                            Height="40"
                            CornerRadius="20"
                            Background="Transparent"
                            Command="{Binding SendCommand}"
                            Margin="0,0,5,0"
                            Padding="0">
            
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Styles>

                        <Path Data="{StaticResource SendIcon}"
                              Stroke="#364D70" 
                              StrokeThickness="2" 
                              Fill="Transparent"
                              Width="22"
                              Height="22"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,2,2,0"/> 
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <!-- Add Contact/Group Overlay -->
        <ContentControl Grid.ColumnSpan="2"
                        Content="{Binding SidebarViewModel.AddContactViewModel}"
                        IsVisible="{Binding SidebarViewModel.IsAddContactOpen}"
                        ZIndex="1000"/>
    </Grid>
</UserControl>