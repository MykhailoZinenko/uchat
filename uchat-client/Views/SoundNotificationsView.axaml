<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:uchat_client.ViewModels"
             xmlns:views="clr-namespace:uchat_client.Views"
             x:Class="uchat_client.Views.SoundNotificationsView"
             x:DataType="viewModels:SoundNotificationsViewModel"
             Background="#364D70">

    <UserControl.Resources>
        <SolidColorBrush x:Key="ToggleSwitchFillOff" Color="#90A4AE"/>
        <SolidColorBrush x:Key="ToggleSwitchFillOffPointerOver" Color="#78909C"/>
        <SolidColorBrush x:Key="ToggleSwitchFillOffPressed" Color="#607D8B"/>
    
        <SolidColorBrush x:Key="ToggleSwitchStrokeOff" Color="Transparent"/>
        <SolidColorBrush x:Key="ToggleSwitchStrokeOffPointerOver" Color="Transparent"/>
        <SolidColorBrush x:Key="ToggleSwitchStrokeOffPressed" Color="Transparent"/>

        <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="#364D70"/>
        <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="#2D405E"/>
        <SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="#2D405E"/>
        
        <SolidColorBrush x:Key="SliderThumbBackground" Color="#364D70"/>
        <SolidColorBrush x:Key="SliderThumbBackgroundPointerOver" Color="#364D70"/> 
        <SolidColorBrush x:Key="SliderThumbBackgroundPressed" Color="#364D70"/>
    
        <SolidColorBrush x:Key="SliderThumbBorderBrush" Color="#364D70"/>
        <SolidColorBrush x:Key="SliderThumbBorderBrushPointerOver" Color="#364D70"/>
        <SolidColorBrush x:Key="SliderThumbBorderBrushPressed" Color="#364D70"/>

        <SolidColorBrush x:Key="SliderTrackValueFill" Color="#5C7DA8"/>
        <SolidColorBrush x:Key="SliderTrackValueFillPointerOver" Color="#5C7DA8"/>
        <SolidColorBrush x:Key="SliderTrackValueFillPressed" Color="#5C7DA8"/>

        <SolidColorBrush x:Key="SliderTrackFill" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SliderTrackFillPointerOver" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SliderTrackFillPressed" Color="#E0E0E0"/>
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="Slider">
            <Setter Property="Height" Value="40" />
            <Setter Property="MinWidth" Value="200"/> 
        </Style>

        <Style Selector="Slider /template/ Thumb">
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style Selector="Slider:horizontal /template/ Track">
            <Setter Property="Height" Value="12" /> 
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <Style Selector="Slider:horizontal /template/ RepeatButton">
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <!-- ToggleSwitch стили -->
        <Style Selector="ToggleSwitch">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style Selector="ToggleSwitch /template/ ContentPresenter">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <Style Selector="ToggleSwitch /template/ Border#SwitchKnobBounds">
            <Setter Property="Width" Value="64" />
            <Setter Property="Height" Value="34" />
            <Setter Property="CornerRadius" Value="17" />
        </Style>

        <Style Selector="ToggleSwitch /template/ Border#SwitchKnob">
            <Setter Property="Width" Value="26" />
            <Setter Property="Height" Value="26" />
            <Setter Property="CornerRadius" Value="13" />
            <Setter Property="Margin" Value="4" />
        </Style>

        <Style Selector="ToggleSwitch:focus /template/ Border#SwitchKnobBounds">
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <views:SidebarView Grid.Column="0"
                           DataContext="{Binding SidebarViewModel}" />

        <Grid Grid.Column="1" RowDefinitions="Auto, *" Margin="60">
            
            <!-- Header with back button and title -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Spacing="15"
                        Margin="0,0,30,20">
                
                <Button Command="{Binding BackCommand}"
                        Width="40" Height="40"
                        CornerRadius="20"
                        Padding="0"
                        Background="Transparent"
                        VerticalAlignment="Center">
                    
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#4CFFFFFF"/>
                        </Style>
                    </Button.Styles>

                    <Path Fill="White" 
                          Stretch="Uniform" 
                          Width="20" Height="20"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"/>
                </Button>

                <TextBlock Text="Sound and Notifications"
                           FontSize="26"
                           FontFamily="{StaticResource LibraFontBold}"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Content area -->
            <StackPanel Grid.Row="1" 
                        VerticalAlignment="Top"
                        MaxWidth="800"
                        Spacing="30"
                        HorizontalAlignment="Center">

                <Border Background="#98B7E4"
                        CornerRadius="30"
                        Padding="40">
                    
                    <StackPanel Spacing="20">
                        
                        <Border Background="White"
                                CornerRadius="35"
                                Height="70"
                                Padding="30,0">
                            <Grid ColumnDefinitions="Auto, *">
                                <TextBlock Grid.Column="0"
                                           Text="Sound"
                                           FontSize="22"
                                           FontFamily="{StaticResource LibraFontBold}"
                                           Foreground="#364D70"
                                           VerticalAlignment="Center" />
                                
                                <Slider Grid.Column="1"
                                        Margin="40,0,0,0"
                                        Minimum="0"
                                        Maximum="100"
                                        Value="{Binding SoundVolume}"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Background="White"
                                CornerRadius="35"
                                Height="70"
                                Padding="30,0">
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBlock Grid.Column="0"
                                           Text="Notifications"
                                           FontSize="22"
                                           FontFamily="{StaticResource LibraFontBold}"
                                           Foreground="#364D70"
                                           VerticalAlignment="Center" />
                                
                                <ToggleSwitch Grid.Column="1"
                                              IsChecked="{Binding NotificationsEnabled}" />
                            </Grid>
                        </Border>
                        
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>